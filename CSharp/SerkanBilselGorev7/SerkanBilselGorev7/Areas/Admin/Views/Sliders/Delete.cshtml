@model SerkanBilselGorev7.Models.Slider

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Bunu silmek istediğine emin misin?</h3>
<div>
    <h4>Slider</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="/Images/@Model.Image" alt="" height="90" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div>
