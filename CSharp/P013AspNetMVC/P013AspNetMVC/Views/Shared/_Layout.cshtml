<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - P013AspNetMVCEgitim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/P013AspNetMVCEgitim.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("OzelCss", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">P013AspNetMVCEgitim</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC01RazorSyntax" asp-action="Index">MVC 01 RazorSyntax</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC02HtmlAndTagHelpers" asp-action="Index">MVC 02 HtmlAndTagHelpers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC03DataTransfer" asp-action="Index">MVC 03 DataTransfer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="MVC04ModelBinding" asp-action="Index">Model Binding</a>
                        </li>
                       

                        <li class="dropdown">
                            <a class="btn  dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                MVC05ModelValidation
                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/MVC05ModelValidation">MVC05ModelValidation</a></li>
                                <li><a class="dropdown-item" href="/MVC05ModelValidation/UyeListesi">Üye Listesi</a></li>
                                <li><a class="dropdown-item" href="/MVC05ModelValidation/YeniUye">Yeni Üye Ekle</a></li>
                                <li><a class="dropdown-item" href="/MVC05ModelValidation/UyeDuzenle">Üye Düzenle</a></li>
                                <li><a class="dropdown-item" href="/MVC05ModelValidation/UyeSil">Üye Sil</a></li>
                            </ul>
                        </li>


                        <li class="dropdown">
                            <a class="btn  dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Diğer Konular
                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/MVC06Section">MVC 06 Section</a></li>
                                <li><a class="dropdown-item" href="/MVC07Partial">MVC 07 Partial</a></li>
                                <li><a class="dropdown-item" href="/MVC08ViewResults">MVC 08 View Results</a></li>
                                <li><a class="dropdown-item" href="/MVC09FileUpload">MVC 09 File Upload</a></li>
                                <li><a class="dropdown-item" href="/MVC10Cookie">MVC 10 Cookie</a></li>
                                <li><a class="dropdown-item" href="/MVC11Session">MVC 11 Session</a></li>
                            </ul>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="ContactUs">İletişim</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - P013AspNetMVCEgitim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
              @await RenderSectionAsync("OzelIcerik", required: false)
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>