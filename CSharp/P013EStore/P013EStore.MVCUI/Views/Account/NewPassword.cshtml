@{
    ViewData["Title"] = "Yeni Şifre Talebi";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Şifremi unuttum</h3></div>
                <div class="card-body">
                    <div class="small mb-3 text-muted">Email adresinizi girerek talepte bulunabilirsiniz.</div>
                    <form>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                            <label for="inputEmail">Email address</label>
                            <form asp-action="NewPassword"></form>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-action="Login">Giriş Sayfasına Dön</a>
                            <a class="btn btn-primary" asp-action="NewPassword">Şifremi Unuttum</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-action="SingIn">Hesabın Yok Mu? Kayıt Ol!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>