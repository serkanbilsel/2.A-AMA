@model P013WebSite.Entities.Slider

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Silmek İstediğinize Emin misiniz?</h3>
<div>
  
    <h4>Slide</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="/Img/@Model.Image" width="200px" height="200px" alt="" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |

        <a role="button" class="btn btn-dark" asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
